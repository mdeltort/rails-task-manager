<%= form_for(@task) do |f| %>
  <div class="form-group">
    <h3><%= f.label :title %></h3>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <h3> <%= f.label :details %> </h3>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

   <div class="form-group">

    <span><%= f.check_box :completed %> <%= f.label :completed %> </span>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
